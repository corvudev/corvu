{
  "name": "@corvu/utils",
  "version": "0.4.0",
  "private": false,
  "description": "Utilities for corvu",
  "keywords": [
    "solid",
    "solidjs",
    "headless",
    "accessible",
    "customizable",
    "primitives"
  ],
  "homepage": "https://corvu.dev",
  "bugs": {
    "url": "https://github.com/corvudev/corvu/issues",
    "email": "code@jasi.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corvudev/corvu.git"
  },
  "license": "MIT",
  "author": {
    "name": "Jasmin Noetzli",
    "email": "code@jasi.dev",
    "url": "https://github.com/GiyoMoon"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "solid": "./dist/index.jsx",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "solid": "./dist/*/index.jsx",
      "default": "./dist/*/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "solid": "./dist/components/*.jsx",
      "default": "./dist/components/*.js"
    },
    "./create/*": {
      "types": "./dist/create/*.d.ts",
      "solid": "./dist/create/*.jsx",
      "default": "./dist/create/*.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ],
      "components/*": [
        "./dist/components/*.d.ts"
      ],
      "create/*": [
        "./dist/create/*.d.ts"
      ],
      "dom": [
        "./dist/dom/index.d.ts"
      ],
      "dynamic": [
        "./dist/dynamic/index.d.ts"
      ],
      "floating": [
        "./dist/floating/index.d.ts"
      ],
      "reactivity": [
        "./dist/reactivity/index.d.ts"
      ],
      "scroll": [
        "./dist/scroll/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo dist node_modules api.json",
    "lint": "eslint --max-warnings=0 .",
    "typedoc": "typedoc --json api.json --entryPoints ./src/index.ts --entryPoints ./src/components/*.tsx --entryPoints ./src/create/*.ts --entryPoints ./src/*/index.ts"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "esbuild-plugin-solid": "^0.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-solid": "^0.14.1",
    "prettier": "^3.3.2",
    "solid-js": "^1.8.18",
    "tsup": "^8.1.0",
    "typedoc": "^0.26.4",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "solid-js": "^1.8"
  }
}
