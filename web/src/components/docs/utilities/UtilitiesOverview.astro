---
import UtilitySvg from '@components/docs/utilities/Utility.svg?raw'

const utilities = [
  {
    illustration: UtilitySvg,
    name: 'dismissible',
    href: '/docs/utilities/dismissible/',
  },
  {
    illustration: UtilitySvg,
    name: 'focusTrap',
    href: '/docs/utilities/focus-trap/',
  },
  {
    illustration: UtilitySvg,
    name: 'list',
    href: '/docs/utilities/list/',
  },
  {
    illustration: UtilitySvg,
    name: 'persistent',
    href: '/docs/utilities/persistent/',
  },
  {
    illustration: UtilitySvg,
    name: 'presence',
    href: '/docs/utilities/presence/',
  },
  {
    illustration: UtilitySvg,
    name: 'preventScroll',
    href: '/docs/utilities/prevent-scroll/',
  },
  {
    illustration: UtilitySvg,
    name: 'transitionSize',
    href: '/docs/utilities/transition-size/',
  },
]
---

<div class="not-prose mt-5 @container">
  <div class="grid gap-4 @md:grid-cols-2 @3xl:grid-cols-3">
    {
      utilities.map((utility) => (
        <a
          href={utility.href}
          class="overflow-hidden rounded-xl border-1.25 border-corvu-400 bg-corvu-100 transition-transform active:translate-y-0.5 md:hover:scale-102"
        >
          <Fragment set:html={utility.illustration} />
          <span class="block px-2 py-2 text-lg font-bold">{utility.name}</span>
        </a>
      ))
    }
  </div>
</div>
