---
import '@fontsource-variable/rubik'
import '@assets/global.css'
import '@assets/shiki.css'
import Background from '@components/Background'
import { corvuVersion } from '@lib/getMeta'
import Head from '@components/Head.astro'
import Navigation from '@components/docs/nav/Navigation.astro'
import TableOfContents from '@components/docs/TableOfContents'
import ThemeScript from '@components/ThemeScript.astro'
import Topbar from '@components/Topbar'

interface Props {
  frontmatter: {
    title: string
    description: string
    image: string
  }
  headings: {
    depth: number
    text: string
    slug: string
  }[]
}

const { frontmatter, headings } = Astro.props
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Head {...frontmatter} />
    <link rel="canonical" href={Astro.url} />
    <ThemeScript />
    <script
      defer
      data-domain="corvu.dev"
      data-api="/plausible/api/event/"
      src="/plausible/js/script.js"></script>
  </head>
  <body class="flex h-full flex-col bg-corvu-bg text-corvu-text antialiased">
    <Background type="docs" client:load />
    <Topbar floating={false} client:load>
      <Navigation />
    </Topbar>
    <main class="mx-auto mt-24 h-16 w-full max-w-7xl">
      <div class="flex px-4 md:pl-0">
        <div
          class="fixed hidden h-[calc(100%-88px)] w-52 overflow-y-auto px-4 pb-10 scrollbar-thin md:block"
        >
          <Navigation />
        </div>
        <div class="-mt-1 mb-6 grow">
          <article
            class="prose max-w-[800px] @container prose-headings:scroll-mt-20 prose-h1:mb-4 prose-h1:text-4xl prose-h1:font-black prose-h2:mb-4 prose-h2:mt-8 prose-h2:text-2xl prose-h2:font-extrabold prose-h3:mb-4 prose-h3:mt-8 prose-h3:text-xl prose-h3:font-bold prose-p:mb-2 prose-p:max-w-3xl prose-p:!leading-7 prose-a:text-corvu-link prose-a:underline hover:prose-a:text-corvu-link-hover prose-blockquote:rounded-md prose-blockquote:border-2 prose-blockquote:border-corvu-200 prose-blockquote:bg-corvu-100 prose-blockquote:px-4 prose-blockquote:py-2 prose-code:whitespace-nowrap prose-code:rounded prose-code:border prose-code:border-corvu-200 prose-code:bg-corvu-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:text-sm prose-ol:mb-3 prose-ol:ml-[21px] prose-ol:list-outside prose-ol:list-decimal prose-ul:mb-3 prose-ul:ml-[21px] prose-ul:list-outside prose-ul:list-disc prose-li:mb-1 md:ml-60 md:prose-headings:scroll-mt-2"
          >
            <slot />
            <div
              class="not-prose mb-8 mt-16 flex justify-between space-x-4 border-t-2 border-corvu-200 pt-4 text-sm"
            >
              <code
                ><a
                  href="https://www.npmjs.com/package/corvu/"
                  target="_blank"
                  class="-m-2 p-2">corvu@{corvuVersion}</a
                ></code
              >
              <p class="text-right">
                Developed and designed by <a
                  href="https://github.com/GiyoMoon/"
                  target="_blank"
                  class="-m-2 p-2 font-medium text-corvu-link underline hover:text-corvu-link-hover"
                  >Jasmin</a
                >
              </p>
            </div>
          </article>
        </div>
        <TableOfContents headings={headings} client:load />
      </div>
    </main>
  </body>
</html>
